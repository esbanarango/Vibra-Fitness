<% provide(:settings, 'active') %>
<% provide(:conf_agenda, 'active') %>
<%- model_class = Seat.new.class -%>
<ul class="breadcrumb">
  <li class="active">Configuración Agendas</li>
</ul>
<legend>Configuración de agendas</legend>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th style="width:10%;"></th>
      <th>Nombre</th>
      <th>Num. Máquinas</th>
    </tr>
  </thead>
  <tbody>
    <% @seats.each do |seat| %>
      <tr>
        <td><%= link_to "Agenda", settings_seat_schedules_path(seat), :class => 'btn btn-mini btn-warning' %></td>
        <td><%= seat.name %></td>
        <td><%= seat.num_machines %></td>
      </tr>
    <% end %>
  </tbody>
</table>