<% provide(:employee, 'active') %>
<%- model_class = @employee.class -%>
<legend>Empleado</legend>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @employee.first_name %></dd>
  <dt><strong>Apellido:</strong></dt>
  <dd><%= (@employee.last_name != "") ? @employee.last_name : "-" %></dd>
  <dt><strong>Documento:</strong></dt>
  <dd><%= @employee.document %></dd>
  <dt><strong>Telefono:</strong></dt>
  <dd><%= (@employee.phone != "") ? @employee.phone : "-" %></dd>
  <dt><strong>Dirección:</strong></dt>
  <dd><%= (@employee.address != "") ? @employee.address : "-" %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @employee.email %></dd>
  <dt><strong>Género:</strong></dt>
  <dd><%= @employee.gender %></dd>
  <dt><strong>Celular:</strong></dt>
  <dd><%= (@employee.mobile != "") ? @employee.mobile : "-" %></dd>
  <dt><strong>Sede:</strong></dt>
  <dd><%= Seat.find_by_id(@employee.seat_id).name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Atrás",
              employees_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_employee_path(@employee), :class => 'btn' %>
