<% provide(:client, 'active') %>
<%- model_class = Client.new.class -%>
<h1>Clientes</h1>

<%= form_tag clients_path, :method => 'get', :id => "clients_search" do %>
  <div style="float:right; margin-bottom:5px;">
		  <div class="input-prepend">
		    <span class="add-on" style="margin-right: -5px;"><i class="icon-search"></i></span>
		    <%= text_field_tag :search, params[:search], :class => 'span2', :placeholder => 'Buscar...' %>
		  </div>
  </div>
  <div id="clients"> <%= render :partial => 'clients' %> </div>
<% end %>



