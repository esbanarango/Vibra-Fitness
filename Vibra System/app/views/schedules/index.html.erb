<% provide(:settings, 'active') %>
<% provide(:conf_agenda, 'active') %>
<legend>Agenda - <%= @seat.name%></legend>
<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-01") %>
    <%= h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-01") %>
  </h2>
  <%= calendar_for @schedules, :year => @date.year, :month => @date.month do |s| %>
    <%= s.head('Domingo','Lunes', 'Martes', 'Miercoles', 'Jueves', 'Viernes', 'SÃ¡bado') %>
    <%= s.day(:day_method => :date) do |day, schedules| %>
    <% puts schedules.inspect %>
      <%= day.day %>
      <% if day >= Date.today %>
        <% if schedules.count == 0 %>
         <a style="float:right;" href="schedules/new" class="label label-important"><i style="color:#fff;" class="icon-pencil icon-white"></i> Agendar</a>
        <% else %>
         <a style="float:right;" href="#" class="label label-info"><i style="color:#fff;" class="icon-align-justify icon-white"></i> Ver</a>
        <% end %>
      <%end%>


    <% end %>
  <% end %>

</div>
