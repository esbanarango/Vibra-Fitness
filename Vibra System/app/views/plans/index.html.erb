<% provide(:settings, 'active') %>
<% provide(:list_plans, 'active') %>
<%- model_class = Plan.new.class -%>
<legend>Planes</legend>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Hora Inicio</th>
      <th>Hora Fin</th>
      <th>Edad Máxima</th>
      <th>Edad Mínima</th>
      <th>Tipo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= link_to "Ver", plan_path(plan) %></td>
        <td><%= plan.name %></td>
        <td><%= plan.description %></td>
        <td><%= plan.start_time.strftime('%H:%M') %></td>
        <td><%= plan.end_time.strftime('%H:%M') %></td>
        <td><%= plan.max_age %></td>
        <td><%= plan.min_age %></td>
        <td><%= plan.plan_type %></td>
        <td>
          <%= link_to "Editar",
                      edit_plan_path(plan), :class => 'btn btn-mini' %>
         <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plan_path(plan),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

